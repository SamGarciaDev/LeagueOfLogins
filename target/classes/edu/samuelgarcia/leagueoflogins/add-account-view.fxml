<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.samuelgarcia.leagueoflogins.controllers.AddAccountController">
    <children>
        <Label text="Account" />
        <TextField fx:id="tfAccount">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </TextField>
        <Label text="Password" />
        <PasswordField fx:id="pfPassword">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </PasswordField>
        <ButtonBar prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button fx:id="btnSave" mnemonicParsing="false" onAction="#exitSaving" text="Save" />
                <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#exitWithoutSaving" text="Cancel" />
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
